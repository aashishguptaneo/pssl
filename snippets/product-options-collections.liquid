<style>
#other-options{
    width: 100%;
      box-sizing: border-box;
      padding: 10px;
   
  }
  #other-options .product-box{
      background-color: #FFFFFF;
      border: 1px solid #A4A4A4;
      color: inherit;
      display: block;
      float: left;
      font-size: 12px;
      margin: 10px 10px 0 0;
      padding: 10px;
      text-decoration: none;
      cursor: pointer;
      max-width: 207px;
      height: 73px;

  }
  #other-options .product-box:hover {
      background-color: 
      #E8E8E8;
  }

  #other_options .title {
      font-size: 14px;
      font-weight: bold;
  }
  </style>
{%- assign optionTag = "" -%}
{%- for tag in product.tags -%}
      {%-if tag contains "option-group-"-%}
	{%- assign optionTag = tag | replace:" ", "-" -%}
	{%- assign optionTag = optionTag | replace:".", "-" -%}
	{%- assign optionTag = optionTag | replace:"/", "-" -%}
	{%- endif -%}
{%- endfor -%}

{%assign otherOptionsCount = collections[optionTag].products_count | plus:0%}


{%if otherOptionsCount > 0%}

  <div style="clear: both;"></div>
  <div id="other-options">
    <span class="title">Other Available Options</span><br>

  {%- for productOpt in collections[optionTag].products -%}
    {%-if product.handle != productOpt.handle-%}
    	{%-if productOpt.variants[0].metafields.bcs["BCS_nosearch"] != "Y" -%}
      		{%- for tag in productOpt.tags -%}

      			{%- if tag contains "option-title" -%}

          			{%- assign shortTitle = tag | replace: 'option-title-', '' -%}
    				 
        			{% break %}
      			{%- else -%}
          			{%- assign shortTitle = productOpt.title | slice:0, 53 -%}    
    			{%- endif -%}
      		{%- endfor -%}
      	<!--	<div onclick="document.location.href='{{ productOpt.url | within: collection }}'" class="product-box" title="{{ productOpt.title}}">  -->
    	<div onclick="document.location.href='{{ productOpt.url | within: collection }}'" class="product-box" title="{{ productOpt.title}}">
      		{{shortTitle}}<br>
      		{%- if productOpt.price_varies -%}
      			<!--<span class="visuallyhidden">Starting at</span>//-->
      			{{ productOpt.price_min | money_without_trailing_zeros }}
      			<!--<span aria-hidden="true">+</span>//-->
      		{%- else -%}
      			{{ productOpt.price | money_without_trailing_zeros }}
      		{%- endif -%}
        	</div>
    	{%- endif -%}
        
  	
    {%- endif -%}
  {%- endfor -%}
    <div style="clear: both;"></div>
  </div>
  <div style="clear: both;"></div>
{%endif%}

