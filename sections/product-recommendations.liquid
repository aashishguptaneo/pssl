{%- capture section_settings -%}
{
  "stackable": false,
  "layout": "vertical",
  "productId": {{ product.id | json }},
  "useRecommendations": {% if product.metafields.sf_related_products.enabled == 1 %}false{% else %}true{% endif %},
  "recommendationsCount": 50
}
{%- endcapture -%}
	{% assign isMainCollection = false %}
        {% for cls in product.collections %}
          {% assign primary_collection = cls.metafields.global.primary_collection %}
            {% if primary_collection and primary_collection == 'Y'%}
                {% assign collection =  cls %}
                {% assign isMainCollection = true %}
              {% break %}
            {% endif %}
        {% endfor %}
  {% if isMainCollection == false  %}
 	 {% assign collection =  collection %}
  {% endif %}

	

{%- if section.settings.show_product_recommendations -%}
  <section class="section" data-section-id="{{ section.id }}" data-section-type="product-recommendations" data-section-settings='{{ section_settings }}'>
    <div class="container">
      {%- if section.settings.heading != blank -%}
        <header class="section__header">
          <h3 class="section__title heading h3">{{ section.settings.heading | escape }} </h3>
        </header>
      {%- endif -%}
       
                       
      	

      <div class="product-recommendations">
          <div class="scroller">
            <div class="scroller__inner">
              <div class="product-list product-list--vertical product-list--scrollable">
                
                
              
                {% assign base_product = product %}
                  {%- for product in collection.products -%}
                      {% assign  selected_variant =  product.selected_or_first_available_variant %}
                      {% if selected_variant.metafields.bcs["BCS_nosearch"] != 'Y' and base_product.id != product.id %}
                          {%- render 'product-item', product: product, grid_classes: '1/4--lap 1/5--desk 1/6--wide', bcs_qh_cost:selected_variant.metafields.bcs["BCS_qoh_cost"],show_add_to_cart: section.settings.show_quick_buy -%}
                      {% endif %}
                  {%- endfor -%}
              </div>
            </div>
          </div>
      </div>
    </div>

    {%- comment -%}
    --------------------------------------------------------------------------------------
    QUICK VIEW CONTAINER
    --------------------------------------------------------------------------------------
    {%- endcomment -%}

    <div id="modal-quick-view-{{ section.id }}" class="modal" aria-hidden="true">
      <div class="modal__dialog modal__dialog--stretch" role="dialog">
        <button class="modal__close link" data-action="close-modal">{%- render 'icon', icon: 'close' -%}</button>

        <div class="modal__loader">
          {%- render 'icon', icon: 'search-loader' -%}
        </div>

        <div class="modal__inner"></div>
      </div>
    </div>
  </section>
{%- endif -%}

<script>
  var interval = setInterval(doStuff, 2000);
  function doStuff(){
    if($('.product-recommendations .product-item').length > 0){
      if($('.product-recommendations .product-item').length <= 4){
        $('.product-recommendations .product-item').addClass('fourth-grid');
        window.recommendationflickity.resize();
      }
      clearInterval(interval);
    }
  }
</script>

{% schema %}
{
  "name": "Product recommendations",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_product_recommendations",
      "label": "Show dynamic recommendations",
      "info": "Dynamic recommendations change and improve with time. [Learn more](https://help.shopify.com/en/themes/development/recommended-products)",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You may also like"
    },
    {
      "type": "checkbox",
      "id": "show_quick_buy",
      "label": "Show quick buy",
      "default": false
    }
  ]
}
{% endschema %}